@model EzgiBlog.Data.DTO.CommentDTO

<ul class="comment-list">
    <h5 class="post-author_head">Written by <a href="@Url.Action("Giris","Home")" title="Posts by admin" rel="author">admin</a></h5>
    <li>
        <img src="~/Content/images/avatar.png" class="img-responsive" alt="">
        <div class="desc">
            <p>View all posts by: <a href="@Url.Action("Giris","Home")" title="Posts by admin" rel="author">admin</a></p>
        </div>
        <div class="clearfix"></div>
    </li>
</ul>
<h3>Leave a comment</h3><br />
@Html.ValidationSummary()
@using (Html.BeginForm("Comment", "Home", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name)<br />
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @required = "true" })
     
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Email)<br />
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", @required = "true" })
       
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone)<br />
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", @required = "true" })
      
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Message)<br />
        @Html.TextAreaFor(c => c.Message, new { @class = "form-control", @required = "true" })

    </div>
    @Html.HiddenFor(c=>c.Id)
    <button type="submit" class="btn btn-default">Send</button>
}